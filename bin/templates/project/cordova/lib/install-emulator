var fs = require('fs');
var path = require('path');

var Promise = require('es6-promise').Promise;

var common = require('./common');

var findPorts = require('node-firefox-find-ports');
var connect = require('node-firefox-connect');

var args = process.argv;
var install_target;
if(args.length > 2) {
    if (args[2].substring(0, 9) == '--target=') {
        install_target = args[2].substring(9, args[2].length);
     } else {
        console.error('ERROR : argument \'' + args[2] + '\' not recognized.');
        process.exit(2);
     }
}

findPorts({
    firefoxOSSimulator: true,
    detailed: true 
}).then(function(results) {
    
    var ports = results.map(function(result) {
        // HACK: Coerce from int to string so indexOf works later on
        return '' + result.port;
    });

    var port;
    if (!install_target) {
        port = ports[0];
    } else {
        if (ports.indexOf(install_target) === -1) {
            throw new Error('No such emulator \'' + install_target + '\'.');
        }
        port = install_target;
    }

    console.log('Connecting to simulator on ' + port);
    return connect(port);

}).then(common.pushApp).then(function(result) {

    process.exit(0);

}).catch(function(err) {

    console.error('ERROR: ' + err);
    process.exit(2);

});
